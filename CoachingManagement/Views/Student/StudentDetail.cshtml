@model Student

@{
    var photopath = "~/Images/" + Model.PhotoPath;

}

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="@photopath" alt="image not found" asp-append-version="true">
    <div class="card-body">
        <h5 class="card-title">Student:-</h5>
        <p class="card-text">Student With the following detail is added to the system</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.StudentName</li>
        <li class="list-group-item">@Model.FatherName</li>
        <li class="list-group-item">@Model.Gender</li>
        <li class="list-group-item">@ViewBag.CourseNames.CourseName</li>

    </ul>
    <div class="card-body">
        <a asp-controller="student" asp-action="edit" asp-route-id="@Model.StudentId" class="btn btn-link card-link">Edit</a>
        <a asp-controller="student" asp-action="delete" asp-route-id="@Model.StudentId" class="btn btn-danger card-link">Delete</a>
    </div>
</div>